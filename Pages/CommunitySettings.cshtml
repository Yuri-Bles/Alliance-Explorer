@page
@model CommunitySettingsModel
@{
    ViewData["Title"] = "Community Settings page";
}

<head>
	<link rel="stylesheet" href="~/css/site.css" />
	<meta charset="UTF-8">
	<title>Tickets Page</title>
	<style>
		
    </style>
</head>
<body>
	<div class="text-center">
		<h1 class="display-4">Settings</h1>
		
		<form method="post">
			<input type="hidden" asp-for="SelectedCommunityId" />

			<h3 class="display-8">Subject</h3>
			<input class="textbox" type="text" id="subject" name="subject" asp-for="Subject">
			<button class="button" asp-area="" asp-page-handler="ChangeSubject">Change</button>

			<h3 class="display-8">Language</h3>
			<input class="textbox" type="text" id="language" name="language" asp-for="Language">
			<button class="button" asp-area="" asp-page-handler="ChangeLanguage">Change</button>

			<h3 class="display-8">Description</h3>
			<textarea class="textbox" type="text" id="description" name="description" asp-for="Description"></textarea>
			<button class="button" asp-area="" asp-page-handler="ChangeDescription">Change</button>

			<h3 class="display-8">Rules</h3>
			<textarea class="textbox" type="text" id="rules" name="rules" asp-for="Rules"></textarea>
			<button class="button" asp-area="" asp-page-handler="ChangeRules">Change</button>

			<h1></h1>
			<button class="button" asp-area="" asp-page-handler="Delete">Delete</button>
		</form>
		<p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
	</div>
</body>